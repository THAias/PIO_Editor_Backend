{
  "name": "pio_editor_backend",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "test:ci": "jest --coverage --runInBand",
    "prettier:fix": "prettier --write \"{src,tests}/**/*.{js,ts,tsx,css,sass,scss,less,html,md}\"",
    "prettier:check": "prettier --check \"src/**/*.{js,ts,tsx,css,sass,scss,less,html,md}\"",
    "lint": "tsc --noEmit && eslint --fix \"{src,tests}/**/*.{ts,tsx}\"",
    "build": "tsc --project tsconfig.prod.json && mkdir -p dist/assets/ && cp -r assets/*.pdf dist/assets/",
    "test:sec": "eslint src/**/*.ts -f json -o eslint-sast-report.json",
    "start_db": "docker-compose up -d",
    "start": "npm run start_db && cross-env NODE_ENV=development VERSION_ENV=webVersion ts-node ./src/express/server.ts",
    "start:localVersion": "npm run start_db && cross-env NODE_ENV=development VERSION_ENV=localVersion ts-node ./src/express/server.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@thaias/pio_editor_meta": "1.1.9",
    "@thaias/pio_fhir_resources": "^2.3.17",
    "@types/ioredis": "^5.0.0",
    "@types/nodemailer": "^6.4.15",
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "fast-xml-parser": "4.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongodb": "^6.8.0",
    "mongoose": "^8.5.1",
    "nodemailer": "^6.9.14",
    "react-fast-marquee": "^1.6.5",
    "svg-captcha": "^1.4.0",
    "uuid": "^10.0.0",
    "xml-formatter": "^3.6.3"
  },
  "devDependencies": {
    "@babel/core": "^7.24.9",
    "@babel/plugin-transform-runtime": "^7.24.7",
    "@babel/preset-env": "^7.24.8",
    "@babel/preset-typescript": "^7.24.7",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.7",
    "@types/node": "^20.14.11",
    "@types/uuid": "^10.0.0",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^1.0.3",
    "husky": "^9.1.1",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "jest-extended": "^4.0.2",
    "jest-junit": "^16.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^15.2.7",
    "nodemon": "^3.1.4",
    "npm-check-updates": "^16.14.20",
    "prettier": "^3.3.3",
    "sonar-report": "^3.1.5",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.{ts,tsx,js,json,css,sass,scss,less,html,md}": "npm run prettier:fix",
    "{src,tests}/**/*.{ts,tsx}": "npm run lint --fix"
  },
  "jestSonar": {
    "reportPath": "reports",
    "reportFile": "test-reporter.xml",
    "indent": 4
  }
}
